
# per-host custom built applications per
export PATH=~/.$(hostname)-local/bin:$PATH

unset LS_COLORS


function bvtags () {
	echo "	TAGS"
	ctags -Rb 
	echo "	CSCOPE"
	cscope -Rb
}                                      

function set_prompt() {
	green=$(tput setaf 1)
	blue=$(tput setaf 4)
	bold=$(tput bold)
	reset=$(tput sgr0)
	export PS1='\[$green$bold\]\h\[$reset\]:\[$blue$bold\]\w\[$reset\]\n$ '
}

if [ "$?" -eq 0 ]; then
	alias ls='ls --color=auto'
else
	alias ls='ls -G'
fi

alias psa='ps -u `whoami` -Hf'
alias g='gvim'


# do some 'smart' stuff if this is an xterm or dome other 'smart' terminal s
# e.g. set the title to user@host:dir, nicer prompt. w/o this selection 'dumb'
# terminals (e.g. the one when doing rcp or scp) will get confused
case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
	set_prompt
	# disable XON/XOFF flow control
	stty -ixon
	ls --color=auto 2>/dev/null
    ;;
*)
	;;
esac

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Alias definitions.
# You may want to put all your additions into a separate file like
# ~/.bash_aliases, instead of adding them here directly.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if [ -f /etc/bash_completion ] && ! shopt -oq posix; then
    . /etc/bash_completion
fi


if [ -e $HOME/.bash_local ]; then
	source $HOME/.bash_local
fi

